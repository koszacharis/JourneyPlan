<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"


    android:paddingStart="?android:attr/listPreferredItemPaddingStart">

    <TextView
        android:id="@+id/stations"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:layout_alignParentStart="true"

        android:layout_toStartOf="@+id/rightLayout"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:textAppearance="?android:attr/textAppearanceListItemSmall" />

    <LinearLayout
        android:id="@+id/rightLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"

        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bicyclesImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:contentDescription="@string/free_bikes"
            android:padding="@dimen/station_list_item_logo_padding"
            android:src="@drawable/ic_directions_bike_black_48dp" />

        <TextView
            android:id="@+id/bicyclesNumber"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/slotsImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/empty_slots"
            android:padding="@dimen/station_list_item_logo_padding"
            android:src="@drawable/ic_local_parking_black_48dp" />

        <TextView
            android:id="@+id/slotsNumber"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="18dp" />
    </LinearLayout>
</RelativeLayout>
